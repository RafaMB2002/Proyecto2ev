{% extends 'landing/landingPage.html.twig' %}
{% block title %}
    Registro
{% endblock %}
{% block header %}
    <!-- Topbar Start -->
    <div class="container-fluid bg-primary text-white d-none d-lg-flex">
        <div class="container py-3">
            <div class="d-flex align-items-center">
                <a href="{{absolute_url(path('landing_page'))}}">
                    <h2 class="text-white fw-bold m-0">Xokas y Cía</h2>
                </a>
                <div class="ms-auto d-flex align-items-center">
                    <small class="ms-4"><i class="fa fa-map-marker-alt me-3"></i>C/ Ntra. Sra. de la Consolación nº8, Lahiguera, España</small>
                    <small class="ms-4"><i class="fa fa-envelope me-3"></i>rmonber2302@g.educaand.es</small>
                    <small class="ms-4"><i class="fa fa-phone-alt me-3"></i>+34 644 88 61 80</small>
                    <div class="ms-3 d-flex">
                        <a class="btn btn-sm-square btn-light text-primary rounded-circle ms-2" href=""><i
                                class="fab fa-facebook-f"></i></a>
                        <a class="btn btn-sm-square btn-light text-primary rounded-circle ms-2" href=""><i
                                class="fab fa-twitter"></i></a>
                        <a class="btn btn-sm-square btn-light text-primary rounded-circle ms-2" href=""><i
                                class="fab fa-linkedin-in"></i></a>
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <small class="ms-4">{{app.user.email}}</small>
                        {% endif %}
                </div>
            </div>
        </div>
    </div>
    <!-- Topbar End -->
{% endblock %}
{% block body %}
    <form class="container-fluid p-5 text-center">
        <div class="row justify-content-center">
            <label class="col-3">
                {{ form_label(form.Nombre) }}
            </label>
            <div class="col-3">
                {{ form_widget(form.Nombre) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <label class="col-md-3">
                {{ form_label(form.Apellidos) }}
            </label>
            <div class="col-md-3">
                {{ form_widget(form.Apellidos) }}
            </div>
        </div>
        <div class="row justify-content-center">
            <label class="col-md-3">
                {{ form_label(form.email) }}
            </label>
            <div class="col-md-3">
                {{ form_widget(form.email) }}
            </div>
        </div>
            {% for passwordField in form.password %}
                <div class="row justify-content-center">
                    <div class="col-md-3">
                        {{ form_label(passwordField, null, { 'attr': {'class': 'form-label'} }) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_widget(passwordField, { 'attr': {'class': 'form-input'} }) }}
                    </div>
                </div>
            {% endfor %}
        <div>
        <div class="row justify-content-center">
            <label class="col-md-3">
                {{ form_label(form.avatar) }}
            </label>
                <div class="row">
                    {{ form_label(form.avatar.children[0]) }}
                    {{ form_widget(form.avatar.children[0]) }}
                </div>
                <div class="row">
                    {{ form_label(form.avatar.children[1]) }}
                    {{ form_widget(form.avatar.children[1]) }}
                </div>
                <div class="row">
                    {{ form_label(form.avatar.children[2]) }}
                    {{ form_widget(form.avatar.children[2]) }}
                </div>
        </div>
        <div class="row">
            <label class="col-md-6">
                {{ form_label(form.acepto_los_terminos) }}
            </label>
            <div class="col-md-6">
                {{ form_widget(form.acepto_los_terminos) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                {{ form_widget(form.Registrarse) }}
            </div>
        </div>

    </form>
{% endblock %}

{% block footer %}
    
{% endblock %}

